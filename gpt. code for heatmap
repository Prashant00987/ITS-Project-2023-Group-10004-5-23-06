import matplotlib.pyplot as plt
from mpl_toolkits.mplot3d import Axes3D
import numpy as np

# Create a 3D plot
fig = plt.figure()
ax = fig.add_subplot(111, projection='3d')
ax.set_xlabel('X')
ax.set_ylabel('Y')
ax.set_zlabel('Z')

# Define a function to update the plot data
def update_plot(i):
    # Replace this with your code to get the current position of the object
    x = np.random.rand(10)
    y = np.random.rand(10)
    z = np.random.rand(10)

    # Clear the plot and update the data
    ax.clear()
    ax.scatter(x, y, z, c=z, cmap='Reds')
    ax.set_xlim(0, 1)
    ax.set_ylim(0, 1)
    ax.set_zlim(0, 1)
    ax.set_xlabel('X')
    ax.set_ylabel('Y')
    ax.set_zlabel('Z')
    ax.set_title('Frame {}'.format(i))

# Set up the animation
ani = plt.FuncAnimation(fig, update_plot, interval=1000)

# Show the plot
plt.show()
